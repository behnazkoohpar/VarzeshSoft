<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MembershipFileCard">

    <include
        android:id="@+id/titr"
        layout="@layout/titr" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@id/titr"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="10sp"
                app:customFont="fonts/IRANSans.ttf" />

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/date"
                android:text="time"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="10sp"
                app:customFont="fonts/IRANSans.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/teal_100">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/pic" />

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_main"
                android:layout_marginRight="20dp"
                android:text="پدرام"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                app:customFont="fonts/IRANSans.ttf" />

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/ozviyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_main"
                android:layout_marginRight="20dp"
                android:text="طلائی"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                app:customFont="fonts/IRANSans.ttf" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/cardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شماره کارت :"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                app:customFont="fonts/IRANSans.ttf" />

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/cardNumber"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                app:customFont="fonts/IRANSans.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_main">

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/dateStartText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="تاریخ شروع عضویت: "
                android:textAlignment="center"
                android:textColor="@color/gray"
                app:customFont="fonts/IRANSans.ttf" />

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/dateStartOzv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/dateStartText"
                android:text="123456"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                app:customFont="fonts/IRANSans.ttf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_main"
            android:layout_marginRight="@dimen/margin_main"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_main">

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/dateEndText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="تاریخ پایان عضویت: "
                android:textAlignment="center"
                android:textColor="@color/gray"
                app:customFont="fonts/IRANSans.ttf" />

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/dateEndOzv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/dateEndText"
                android:text="123456"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                app:customFont="fonts/IRANSans.ttf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_main"
            android:layout_marginRight="@dimen/margin_main"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_main">

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/orgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="سازمان: "
                android:textAlignment="center"
                android:textColor="@color/gray"
                app:customFont="fonts/IRANSans.ttf" />

            <com.koohpar.eram.custom.CustomTextView
                android:id="@+id/orgOzv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/orgText"
                android:text="123456"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                app:customFont="fonts/IRANSans.ttf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_main"
            android:layout_marginRight="@dimen/margin_main"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/barcodeImage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_main"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_main"
            android:scaleType="fitXY" />
    </LinearLayout>
</ScrollView>


</RelativeLayout>