<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/backgroundPage"
    android:elevation="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_icon_menu" />

        <com.koohpar.eram.custom.CustomTextView
            android:id="@+id/toolbarTitr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/txt_eram"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            app:customFont="fonts/IRANSans.ttf" />

        <ImageView
            android:id="@+id/btnCard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_card" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>