<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="0.5dip" android:color="@color/divider" />
            <gradient android:angle="-90" android:startColor="@color/backgroundPage" android:endColor="@color/backgroundPage"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="0.5dip" android:color="@color/divider" />
            <solid android:color="@color/backgroundPage"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="0.5dip" android:color="@color/divider" />
            <gradient android:angle="-90" android:startColor="@color/backgroundPage" android:endColor="@color/backgroundPage" />
        </shape>
    </item>
</selector>